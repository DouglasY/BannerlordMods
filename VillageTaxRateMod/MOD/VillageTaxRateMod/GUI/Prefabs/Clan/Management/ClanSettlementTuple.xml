<Prefab>
  <Constants>
    <Constant Name="Kingdom.Item.Tuple.Width" BrushLayer="Default" BrushName="Kingdom.Item.Tuple" BrushValueType="Width" />
    <Constant Name="Kingdom.Item.Tuple.Height" BrushLayer="Default" BrushName="Kingdom.Item.Tuple" BrushValueType="Height" />
  </Constants>
  <Window>
    <ButtonWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!Kingdom.Item.Tuple.Width" SuggestedHeight="!Kingdom.Item.Tuple.Height" Brush="Clan.Item.Tuple" Command.Click="OnSettlementSelection" IsSelected="@IsSelected" DoNotPassEventsToChildren="true">
      <Children>

        <ListPanel WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" MarginLeft="10">
          <Children>

            <!--Settlement Visual-->
            <ButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="84" SuggestedHeight="84" Sprite="Clan\portrait_slot_right_panel" HorizontalAlignment="Left" VerticalAlignment="Center" Command.AlternateClick="ExecuteOpenSettlementPage" Command.Click="ExecuteOpenSettlementPage" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint">
              <Children>
                <Widget DoNotPassEventsToChildren="true" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" MarginLeft="5" MarginRight="5" MarginTop="5" MarginBottom="5" Sprite="@FileName" IsDisabled="true"/>
              </Children>
            </ButtonWidget>

            <!--Name-->
            <TextWidget WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="137" MarginLeft="10" Brush="Clan.Tuple.Name.Text" Text="@Name" DoNotAcceptEvents="true"/>

            <Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="100" SuggestedHeight="74" Brush="Encyclopedia.SubPage.Element" VerticalAlignment="Center" MarginLeft="10" IsVisible="@HasGovernor">
              <Children>
                <ImageIdentifierWidget DataSource="{Governor\ImageIdentifier}" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" MarginLeft="5" MarginRight="5" MarginTop="5" MarginBottom="5" AdditionalArgs="@AdditionalArgs" ImageId="@Id" ImageTypeCode="@ImageTypeCode" IsDisabled="true" />
                <ButtonWidget DataSource="{Governor}" DoNotPassEventsToChildren="true" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" HorizontalAlignment="Left" VerticalAlignment="Center" MarginLeft="10" Command.AlternateClick="ExecuteOpenSettlementPage" Command.Click="ExecuteOpenSettlementPage" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" />
				<ButtonWidget DataSource="{Governor}" DoNotPassEventsToChildren="true" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" HorizontalAlignment="Left" VerticalAlignment="Center" MarginLeft="10" Command.AlternateClick="ExecuteOpenSettlementPage" Command.Click="ExecuteOpenSettlementPage" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" />
              </Children>
            </Widget>

          </Children>
        </ListPanel>

      </Children>
    </ButtonWidget>
  </Window>
</Prefab>